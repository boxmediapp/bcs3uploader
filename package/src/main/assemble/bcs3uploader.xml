<?xml version="1.0" encoding="ISO-8859-1"?>
<assembly>
	<id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>maven</baseDirectory>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
           
           <fileSet>
                   <directory>../bcs3util/</directory>
                   <includes>
                       <include>**/*.*</include>
                   </includes>
                   <outputDirectory>/bcs3util</outputDirectory>
           </fileSet>
           
           <fileSet>
                   <directory>../</directory>
                   <includes>
                       <include>*.sh</include>
                       <include>*.py</include>
                       <include>*.md</include>
                       <include>*.json</include>
                   </includes>
                   <outputDirectory>/</outputDirectory>
           </fileSet>
    </fileSets>
</assembly>
